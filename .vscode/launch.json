    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/${fileBasenameNoExtension}",
            "args": ["basicsky_opencl.cl"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        // {
        //     "type": "lldb",
        //     "request": "launch",
        //     "name": "Debug",
        //     "program": "${workspaceRoot}/${fileBasenameNoExtension}",
        //     "args": ["basicsky_opencl.cl"],
        //     "cwd": "${workspaceRoot}",  
        // },
        {
            "name": "C++ Launch (gdb-win lldb-osx)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/${fileBasenameNoExtension}",
            "args": ["basicsky_opencl.cl"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "osx": {
                "MIMode": "lldb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
                },
        },
    ]
}